SECRET_KEY=your-secret-key-here
DEBUG=True
LOG_LEVEL=INFO
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://sench.remotereps.com

# Database
DB_NAME=auto_tester
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery workers (run these in separate terminals):
# celery -A auto_tester worker -Q upload -l info -n upload@%h
# celery -A auto_tester worker -Q execution -l info -n execution@%h

# Docker Model Runner
DMR_HOST=localhost
DMR_PORT=12434
DMR_MODEL=ai/mistral
DMR_VISION_MODEL=ai/qwen3-vl
DMR_TEMPERATURE=0.9
DMR_MAX_TOKENS=16096
DMR_REQUEST_TIMEOUT=300

# OpenAI API (for vision model)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1/chat/completions
OPENAI_VISION_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4096
OPENAI_REQUEST_TIMEOUT=120

# Vision Backend: "dmr" or "openai"
VISION_BACKEND=dmr

# Agent
AGENT_MAX_ITERATIONS=30
AGENT_TIMEOUT_SECONDS=600

# SearXNG (metasearch engine)
SEARXNG_BASE_URL=http://localhost:8888
SEARXNG_MAX_RESULTS=5
SEARXNG_REQUEST_TIMEOUT=15

# Search page fetching (trafilatura)
SEARCH_FETCH_PAGE_COUNT=3
SEARCH_PAGE_MAX_LENGTH=2000
SEARCH_PAGE_FETCH_TIMEOUT=10

# Controller
CONTROLLER_SERVER_HOST=localhost
CONTROLLER_SERVER_PORT=8000
CONTROLLER_AGENT_CONNECT_TIMEOUT=60
INTERACTIVE_CMD_TIMEOUT_SECONDS=300

# Output Summarizer
DMR_SUMMARIZER_MODEL=ai/mistral
OUTPUT_SUMMARIZE_THRESHOLD=2000
OUTPUT_SUMMARIZE_CHUNK_SIZE=12000

# Context Summarizer
CONTEXT_SUMMARIZE_THRESHOLD=20000
CONTEXT_PRESERVE_LAST_MESSAGES=6
CONTEXT_SUMMARIZE_CHUNK_SIZE=8000

# Orchestrator (sub-agent architecture)
ORCHESTRATOR_MODEL=ai/qwen3:32B-Q8_K_XL
ORCHESTRATOR_MAX_TOKENS=4096
ORCHESTRATOR_TEMPERATURE=0.1
ORCHESTRATOR_MAX_SUBTASKS=30
ORCHESTRATOR_MAX_RECOVERY_ATTEMPTS=1

# Sub-Agent
SUB_AGENT_MODEL=ai/mistral
SUB_AGENT_MAX_TOKENS=2048
SUB_AGENT_TEMPERATURE=0.1
SUB_AGENT_MAX_ITERATIONS=15
SUB_AGENT_TIMEOUT_SECONDS=180

# OmniParser (client-side only â€” server runs as standalone FastAPI service on port 8080)
OMNIPARSER_URL=http://localhost:8080
OMNIPARSER_API_KEY=your-omniparser-api-key
OMNIPARSER_REQUEST_TIMEOUT=600
